<%= link_to '<---', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @article.tags.join(' ') %>
</p>

<h2>Comments</h2>
<%= render @article.comments.order(created_at: :desc) %>

<%= render 'comments/form' %>
