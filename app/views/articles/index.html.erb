<h1>Listing articles</h1>

<p>
  <%= link_to 'New article', new_article_path %>
</p>

<%= form_tag articles_path, method: :get do %>
  <div class="input-group">
    <%= text_field_tag :query, "", value: params[:query], class: "form-control" %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: "btn btn-default" %>
      <%= link_to "Clear", articles_path, class: "btn btn-danger" %>
    </span>
  </div>
<% end %>

<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>

<table class='table table-hover'>
  <tr>
    <th>ID</th>
    <th>Created at</th>
    <th>Title</th>
    <th>Author</th>
    <th colspan='3'></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.created_at.to_date %></td>
      <td><%= article.title %></td>
      <td><%= article.user.email %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-success' %></td>
      <td><%= link_to 'Destroy', article_path(article),
                                 method: :delete,
                                 data: { confirm: 'Are you sure?' },
                                 class: 'btn btn-danger' %>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %></td>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
